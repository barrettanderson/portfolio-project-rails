<h1>Login</h1>

<%= form_for @user, url: login_path do |f| %>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email, :class => "new-user", :placeholder => (@user.errors.full_messages_for(:email).first || "Enter email" %>
    </div><br>
    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit "Login" %>

<% end %>