<!DOCTYPE html>
<html>
  <head>
    <title>PortfolioProjectRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
     <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            
  </head>

  <body>
  
    <% if flash[:error] %>
        <% flash[:error].each do |error| %>
          <div>
            <%= error %>
          </div>
        <% end %>
      <% end %>
    <% if flash[:notice] %>
        <%= flash[:notice] %>
    <% end %>
    <nav class="orange accent-2">
      <div class="container">
        <ul class="right">
          <li><%= link_to "Home", root_path %></li>

          <% unless logged_in? %>
            <li><%= link_to "Signup", signup_path %></li>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to 'Log in with Facebook!', '/auth/facebook' %></li>
          <% else %>
          <li><%= link_to "Orders", user_orders_path(current_user) %></li>
          <li><%= link_to "Create Order", new_user_order_path(current_user) %></li>
          <li><%= link_to "Logout", logout_path, method: "delete" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>

